@model ChildrenHelper.Services.Contracts.Models.RegisterUserModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div>
            <label asp-for="Email">Введите Email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="Username">Введите никнейм</label><br />
            <input type="text" asp-for="Username" />
            <span asp-validation-for="Username" />
        </div>
        <div>
            <label asp-for="Name">Введите Ваше имя</label><br />
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div>
            <label asp-for="SecName">Введите Вашу фамилию</label><br />
            <input type="text" asp-for="SecName" />
            <span asp-validation-for="SecName" />
        </div>
        <div>
            <label asp-for="Surname">Введите Ваше отчество</label><br />
            <input type="text" asp-for="Surname" />
            <span asp-validation-for="Surname" />
        </div>
        <div class="form-group">
            <label asp-for="RoleId" class="control-label">Роль</label>
            @Html.DropDownListFor(model => model.RoleId, ViewBag.Roles as SelectList)
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>

