@using ChildrenHelper.Models
@using Microsoft.AspNetCore.Mvc.Internal

@model ChildrenHelper.Services.Contracts.Models.ChildrenModel;



@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<form asp-action="Create" asp-controller="Admin">
    <div class="form-group">
        <label asp-for="Chname" class="control-label">Имя</label>
        <input type="text" asp-for="Chname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Chsurname" class="control-label">Фамилия</label>
        <input type="text" asp-for="Chsurname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Chsecname" class="control-label">Отчетсво</label>
        <input type="text" asp-for="Chsecname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Chdesc" class="control-label">Описание</label>
        <input type="text" asp-for="Chdesc" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Summa" class="control-label">Сумма</label>
        <input type="text" asp-for="Summa" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DiagnozID" class="control-label">Диагноз</label>
        @Html.DropDownListFor(model => model.DiagnozID, ViewBag.Diagnozes as SelectList)
    </div>
    <p>
        <label>Photo</label>
        <input name="Photo" type="file" class="form-control" />
    </p>
    <p>
        <input type="submit" value="Добавить" />
    </p>

    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>
</form>
